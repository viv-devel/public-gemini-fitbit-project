{
  "name": "fitbit-food-logger",
  "version": "1.0.0",
  "description": "Fitbit food logging logic for Gemini custom Gem.",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "functions-framework --target=fitbitWebhookHandler",
    "test": "cross-env GCP_PROJECT=test-project FITBIT_REDIRECT_URI=http://localhost:3000/oauth jest",
    "test:coverage": "cross-env GCP_PROJECT=test-project FITBIT_REDIRECT_URI=http://localhost:3000/oauth jest --coverage",
    "lint": "eslint .",
    "migrate:dry-run": "cross-env DRY_RUN=true node scripts/migrate-tokens.js",
    "migrate:prod": "node scripts/migrate-tokens.js"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.0.0",
    "@google-cloud/secret-manager": "^6.1.1",
    "firebase-admin": "^13.6.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@eslint/js": "^9.39.1",
    "babel-jest": "^30.2.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-jest": "^29.0.1",
    "globals": "^16.5.0",
    "jest": "^30.2.0"
  },
  "jest": {
    "transformIgnorePatterns": [
      "/node_modules/(?!node-fetch|data-uri-to-buffer)/"
    ]
  }
}
